<%- include('./../partials/html-head') %>
<%- include('./../partials/nav') %>

<main class="welcome mythForm">
    <h1><%= title %> </h1>

    <form action="/reviews/<%= review._id %>?_method=PUT" method="POST">
        <label>Edit Review</label>
        <textarea rows="5" cols="50px" name="content" required ><%= review.content %></textarea>
        <select name="rating" >
            <option value="<%= review.rating %>">Your rating <%= review.rating %>/5</option>
            <option value="1">1/5</option>
            <option value="2">2/5</option>
            <option value="3">3/5</option>
            <option value="4">4/5</option>
            <option value="5">5/5</option>
        </select>
        <button type="submit">Submit</button>
    </form>

</main>

