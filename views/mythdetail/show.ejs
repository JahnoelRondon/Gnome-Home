<%- include('./../partials/html-head') %>
<%- include('./../partials/nav') %>

<main class="infoContainer">

    <h1><%= title %> </h1>

    <div class="mythContainer">
        <h1><%= myth.name %> </h1>
        <img src="<%= myth.img %>">
        <p><%= myth.bio %></p>        
    </div>

</main>

<section class="infoReview">

    <div>
        <!-- review form -->
        <form action="/mythdetail/<%= myth._id %>" method="POST">
            <label>Make a Review</label>
            <textarea rows="5" cols="50px" name="content"></textarea>
            <select name="rating" id="">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <button type="submit">Submit</button>
        </form>
    </div>

    <% if (myth.reviews.length > 0) { %>
        <div class="existingReviews">
            <!-- show reviews -->
            <% myth.reviews.forEach(review => { %>
                <div class="review">
                    <p><%= review.content %> </p>
                    <p>Rating: <%= review.rating %>/5 </p>
                    <p><%= review.author.name %> </p>  
                </div>
            <% }) %>
        </div>        
    <% } else {%>
        <h2>Be the first reviewer!</h2>
    <% } %> 

</section>

<%- include('./../partials/footer') %>
